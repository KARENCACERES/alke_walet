<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profile_page">


    <ImageView
        android:id="@+id/background_7"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_plomo" />

    <TextView
        android:id="@+id/mi_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/jua"
        android:text="@string/perfil_p7"
        android:textColor="@color/negro"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/perfil_amanda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mi_perfil"
        app:srcCompat="@drawable/profile_picture_7_png" />

    <ImageView
        android:id="@+id/lapiz_perfil"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mi_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lapiz" />



    <Button
            android:id="@+id/mi_informacion"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#F3F4F5"
            android:text="@string/informacion"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:textColor="@color/negro"
            android:fontFamily="@font/jua"
            android:drawableLeft="@drawable/profile_icon"
            android:drawableRight="@drawable/arrow_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_7" />

        <Button
            android:id="@+id/mis_tarjetas"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F3F4F5"
            android:text="@string/tarjetas"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:textColor="@color/negro"
            android:fontFamily="@font/jua"
            android:drawableLeft="@drawable/card_icon"
            android:drawableRight="@drawable/arrow_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mi_informacion" />

        <Button
            android:id="@+id/opciones"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F3F4F5"
            android:text="@string/opciones"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:textColor="@color/negro"
            android:fontFamily="@font/jua"
            android:drawableLeft="@drawable/settings_icon"
            android:drawableRight="@drawable/arrow_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mis_tarjetas" />

        <Button
            android:id="@+id/centro_ayuda"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F3F4F5"
            android:text="@string/cen_ayu"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:textColor="@color/negro"
            android:fontFamily="@font/jua"
            android:drawableLeft="@drawable/help_icon"
            android:drawableRight="@drawable/arrow_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/opciones" />

    <TextView
        android:id="@+id/amanda_Alk"
        android:layout_width="161dp"
        android:layout_height="20dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/jua"
        android:text="@string/amanda_alk"
        android:textColor="@color/negro"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/perfil_amanda" />




    ></androidx.constraintlayout.widget.ConstraintLayout>
